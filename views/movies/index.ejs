<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Movies Page</h1>
            <p>View some of the movies evilloh watched!</p>
            <p>
                <a class="btn btn-primary" href="/movies/new">Add New Movie</a>
            </p>
        </div>
            
    
</header>

<div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <% movies.forEach(function(movies){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= movies.image %>">
                <div class="caption">
                    <h4> <%= movies.title %> </h4>
                </div>
                <p>
                    <a href="/movies/<%= movies._id %>" class="btn btn-primary" href="/movies/new">More info</a>
                </p>
            </div>
        </div>
    <% }) %>
</div>


</div>


<% include ../partials/footer %>

