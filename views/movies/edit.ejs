<% include ../partials/header %>

<div class="container">
    <div class="container">
            <h1 style="text-align: center"  class="p-3">Edit <%= movie.title %></h1>
            <div style="width: 40%; margin: 0 auto;">
                <form action="/movies/<%= movie._id %>/?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="movie[title]" value="<%= movie.title %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="movie[image]" value="<%= movie.image %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="movie[score]" value="<%= movie.score %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="movie[description]" value="<%= movie.description %>">
                    </div>
                    <div class="form-group">
                        <button class="form-control btn btn-primary">Submit</button>
                    </div>
                </form>
                <a href="/movies">Go back</a>
            </div>
        
        
    </div>
</div>

<% include ../partials/footer %>