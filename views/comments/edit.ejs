<% include ../partials/header %>

<div class="container">
    <div class="container">
            <h1 style="text-align: center"  class="p-3">Edit the comment on </h1>
            <div style="width: 40%; margin: 0 auto;">
                <form action="/movies/<%= movie_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                    </div>
                    <div class="form-group">
                        <button class="form-control btn btn-primary">Submit</button>
                    </div>
                </form>
                <a href="/movies">Go back</a>
            </div>
        
        
    </div>
</div>

