<% include ../partials/header %>

<div class="container">
    <div class="container">
            <h1 style="text-align: center"  class="p-3">Add a New Comment to <%= movie.title %> </h1>
            <div style="width: 40%; margin: 0 auto;">
                <form action="/movies/<%= movie._id %>/comments" method="post">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="Text">
                    </div>
                    <div class="form-group">
                        <button class="form-control btn btn-primary">Submit</button>
                    </div>
                </form>
                <a href="/movies">Go back</a>
            </div>
        
        
    </div>
</div>

<% include ../partials/footer %>